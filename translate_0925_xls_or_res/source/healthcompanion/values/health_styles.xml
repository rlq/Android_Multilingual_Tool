<resources>
    <style name="health_tip_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/health_dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ProgressDrawable.Step.Companion">
        <item name="hpd_backgroundColor">@color/health_main_progress_step_bg</item>
    </style>
    <style name="ProgressDrawable.Exercise.Companion">
        <item name="hpd_backgroundColor">@color/health_main_progress_time_bg</item>
    </style>
    <style name="ProgressDrawable.Active.Companion">
        <item name="hpd_backgroundColor">@color/health_main_progress_count_bg</item>
    </style>
    <style name="ProgressView.Companion">
        <item name="hpv_stepProgressStyle">@style/ProgressDrawable.Step.Companion</item>
        <item name="hpv_exerciseProgressStyle">@style/ProgressDrawable.Exercise.Companion</item>
        <item name="hpv_activeProgressStyle">@style/ProgressDrawable.Active.Companion</item>
    </style>
    <style name="HealthDetailData">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>