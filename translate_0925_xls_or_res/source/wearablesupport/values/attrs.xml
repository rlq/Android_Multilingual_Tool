<?xml version="1.0" encoding="utf-8"?>

<!-- =============================== -->
<!-- RoundProgressBar class attributes -->
<!-- =============================== -->
<resources>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundProgressAlpha" format="float"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="roundTextColor" format="color" />
        <attr name="roundTextSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="startAngle" format="integer"></attr>
        <attr name="roundStyle">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="LoadingProgressView">
        <attr name="color" format="color" />
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ToggleButtonLayout">
        <attr name="background_color" format="color" />
        <attr name="button_color" format="color" />
        <attr name="radius_x" format="dimension" />
        <attr name="radius_y" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="pointMinSize" format="dimension" />
        <attr name="pointMaxSize" format="dimension" />
        <attr name="pointNormalColor" format="color|reference" />
        <attr name="pointSelectedColor" format="color|reference" />
    </declare-styleable>

</resources>